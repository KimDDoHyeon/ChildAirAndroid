<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Search">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout4"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:text="키즈에어"
            android:textColor="#000000"
            android:textSize="24sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Everyday Check"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Kids's Safety"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="178dp">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/Air128"
            android:foreground="@drawable/Air128"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공기질 확인"
            android:layout_gravity="center"
            android:textColor="#000000" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4"
        tools:layout_editor_absoluteX="4dp">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="152dp"
            android:layout_height="147dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:foreground="@drawable/Board128"
            android:background="@drawable/Board128"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="152dp"
            android:layout_height="147dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="50dp"
            android:foreground="@drawable/Calender128"
            android:background="@drawable/Calender128"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="152dp"
            android:layout_height="147dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="200dp"
            android:foreground="@drawable/Food128"
            android:background="@drawable/Food128"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="152dp"
            android:layout_height="147dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/support128"
            android:foreground="@drawable/support128" />
    </RelativeLayout>

</LinearLayout>
